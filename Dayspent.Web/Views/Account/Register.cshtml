@model Dayspent.Web.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout_Public.cshtml";
    ViewBag.Title = "Register | Dayspent - Time Tracking";
}
<div class="bg-grayLight">
    <div class="container padding20">
        
    </div>
</div>
<div class="">
    <div class="container padding20">
        <div class="grid fluid">
            <div class="row">
                <div class="span5">

                    @using (Html.BeginForm("register", "account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                        <h3>Enter an email address</h3>
                        @Html.EditorFor(m => m.Email, "textbox")
                        <p class="tertiary-text-secondary">You will use this email to sign in , as well as receive notifications and password resets.</p>

                        @Html.EditorFor(m => m.FullName, "textbox")
                        <p class="tertiary-text-secondary">This will appear on all your time posts.</p>
                        <h3>Choose a password</h3>
                        @Html.EditorFor(m => m.Password, "password")
                        @Html.EditorFor(m => m.ConfirmPassword, "password")
                        <p>
                            <button type="submit" class="primary large">Register Me</button>
                        </p>
                        <p>
                            Already have an account?
                            @Html.ActionLink("Sign in here.", "signin")
                        </p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
