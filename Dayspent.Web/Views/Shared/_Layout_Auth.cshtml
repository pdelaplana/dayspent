@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @RenderSection("Styles", required: false)
}

@section Scripts{
    @Scripts.Render("~/bundles/plugins")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/sammy")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/widgets")
    @Scripts.Render("~/bundles/views")

    @if (Request.IsAuthenticated)
    {
        <script type="text/javascript" src="@Url.Action("update", "clienttimezone", new { area = "" })"></script>
    }
    @RenderSection("Scripts", false)

}

<header class="page" style="height:45px!important">
    @Html.Partial("_AppNavigationBar")
</header>
<section class="page">
    @RenderBody()
</section>
<footer class="page">

</footer>
